@using BulkyBook.DataAccess.Entities
@model List<Product>
<partial name="_Notification"/>
<div class="text-center">
    <h1 class="display-4">Product</h1>
    <div class="container">
        <div class="row pt-4">
            <div class="col-6">
                <h2 class="text-primary">
                    Product List
                </h2>
            </div>
            <div class ="col-6 text-end">
                <a asp-controller="Product" asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-bookmark-plus">Create New Product</i>
                </a>
            </div>
        </div>

    </div>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>
                    Product Name
                </th>
                <th>
                    Display Order
                </th>
            </tr>
        </thead>
       <tbody>
            @foreach(var obj in Model)
            {
                <tr>
                    <td> @obj.Title</td>
                    <td> @obj.Description</td>
                </tr>
            <td>
                <div class="w-65 btn-group" role="group">
                    <a asp-controller="Product" asp-action="Edit" asp-route-id="@obj.Id"
                       class="btn btn-primary mx-2"> <i class="bi bi-pencil-square"></i> Edit</a>
                    <a asp-controller="Product" asp-action="Delete" asp-route-id="@obj.Id"
                       class="btn btn-danger mx-2"> <i class="bi bi-trash-fill"></i> Delete</a>
                </div>
            </td>
            }
        </tbody>
    </table>
</div>
